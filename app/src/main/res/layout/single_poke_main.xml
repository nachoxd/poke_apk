<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llv0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#000000"
    android:weightSum="1">
    <include android:id="@+id/top_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/single_poke_header_row" />

    <LinearLayout
        android:id="@+id/llh1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/llv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/elem_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/elem_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#000000"
                android:text="Wishiwashi"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/llh2"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/type_int_1"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ghost" />

                <ImageView
                    android:id="@+id/type_int_2"
                    android:layout_width="120dp"
                    android:layout_height="37dp"
                    android:layout_weight="0.08"
                    app:srcCompat="@drawable/poison" />
            </LinearLayout>

            <TextView
                android:id="@+id/ability_static"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="Ability"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/ability_dinamic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="#FFFFFF"
                android:paddingLeft="10dp"
                android:text="Habilidad kul"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/moves_generic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:text="Moves"
        android:textColor="#FFFFFF" />
    <LinearLayout
        android:id="@+id/layout_move1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/move1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:text="Splash"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_weight="0.16"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:id="@+id/move1_type"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/poison" />

        <Button
            android:id="@+id/swap1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/swap"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/delete1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/x"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_move2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/move2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:text="Splash"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_weight="0.16"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:id="@+id/move2_type"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            app:srcCompat="@drawable/poison"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/swap2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/swap"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/delete2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/x"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_move3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/move3"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:text="Splash"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_weight="0.16"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:id="@+id/move3_type"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            app:srcCompat="@drawable/poison"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/swap3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/swap"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/delete3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/x"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_move4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/move4"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:text="Splash"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_weight="0.16"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:id="@+id/move4_type"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            app:srcCompat="@drawable/poison"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/swap4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/swap"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/delete4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/x"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <Button
            android:id="@+id/button_delete_poke"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/trash"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
