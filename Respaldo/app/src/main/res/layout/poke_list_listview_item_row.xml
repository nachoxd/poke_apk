<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llh1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:background="#000000"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/llv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/elem_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/elem_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#000000"
            android:text="Wishiwashi"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/llh2"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/type_int_1"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ghost" />

            <ImageView
                android:id="@+id/type_int_2"
                android:layout_width="120dp"
                android:layout_height="37dp"
                android:layout_weight="0.08"
                app:srcCompat="@drawable/poison" />
        </LinearLayout>
        <TextView
            android:id="@+id/ability_static"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:textColor="#FFFFFF"
            android:text="Ability"/>

        <TextView
            android:id="@+id/ability_dinamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:text="Habilidad kul"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>
